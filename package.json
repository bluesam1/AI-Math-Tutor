{
  "name": "ai-math-tutor",
  "version": "1.0.0",
  "description": "AI Math Tutor - Socratic dialogue system for math problem solving",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "functions"
  ],
  "scripts": {
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\"",
    "build": "npm run build --workspaces --if-present",
    "build:web": "npm run build --workspace=apps/web",
    "build:api": "npm run build --workspace=apps/api",
    "build:functions": "npm run build --workspace=functions",
    "test": "npm run test --workspaces --if-present",
    "dev:web": "npm run dev --workspace=apps/web",
    "dev:api": "npm run dev --workspace=apps/api",
    "dev:emulators": "firebase emulators:start",
    "deploy": "npm run build && firebase deploy",
    "deploy:functions": "npm run build:functions && firebase deploy --only functions",
    "deploy:hosting": "npm run build:web && firebase deploy --only hosting",
    "type-check": "npm run type-check --workspace=apps/web && npm run type-check --workspace=apps/api",
    "type-check:web": "npm run type-check --workspace=apps/web",
    "type-check:api": "npm run type-check --workspace=apps/api",
    "prepare": "node scripts/prepare.js"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3"
  }
}
